<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TableTextStyle">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="TableTextStyleTitle">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemTextKeyStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="itemTextValueStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="itemTextTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:paddingVertical">35dp</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ItemTextViewStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LayoutTitleStyle">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>