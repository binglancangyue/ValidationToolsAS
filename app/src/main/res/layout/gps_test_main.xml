<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutStyle"
    android:orientation="vertical">

    <TextView
        style="@style/LayoutTitleStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/gps_test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_gps_not_enabled"
                style="@style/itemTextTitleStyle" />

            <TextView
                style="@style/itemTextTitleStyle"
                android:text="@string/gps_satellite_msg" />

            <TextView
                android:id="@+id/txt_gps_satellite_count"
                style="@style/itemTextTitleStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_gps_time_count"
                style="@style/itemTextTitleStyle" />

            <TextView
                style="@style/itemTextTitleStyle"
                android:text="@string/gps_time_msg" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_gps_satellite_info"
            style="@style/ItemTextViewStyle" />
    </ScrollView>

